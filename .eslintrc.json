{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "ignorePatterns": [
    "functions/.next/**/*", // Ignore Next.js build output in functions
    ".next/**/*",            // In case there are any in the root
    "lib/**/*",              // Ignore built files
    "generated/**/*"         // Ignore generated files
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "warn" // Optional: Adjust as needed
  }
}
