{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "esModuleInterop": true, // Facilitates easier interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file naming
    "skipLibCheck": true // Speeds up compilation by skipping type checking of declaration files
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
